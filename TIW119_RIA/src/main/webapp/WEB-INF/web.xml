<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>TIW119_RIA</display-name>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/tiw119?serverTimezone=UTC</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>TIW119</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>

  <filter>
    <filter-name>LoggedChecker</filter-name>
    <filter-class>it.polimi.tiw.filters.LoggedChecker</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoggedChecker</filter-name>
      <url-pattern>/Home.html</url-pattern>
      <url-pattern>/GetAccountsData</url-pattern>
      <url-pattern>/CreateAccount</url-pattern>
      <url-pattern>/GetMovementsData</url-pattern>
      <url-pattern>/RequestMovement</url-pattern>
      <url-pattern>/GetContacts</url-pattern>
      <url-pattern>/AddContact</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>NoCacher</filter-name>
    <filter-class>it.polimi.tiw.filters.NoCacher</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>NoCacher</filter-name>
      <url-pattern>/Home.html</url-pattern>
      <url-pattern>/Login.html</url-pattern>
  </filter-mapping>

  <welcome-file-list>
    <welcome-file>Login.html</welcome-file>
  </welcome-file-list>
</web-app>